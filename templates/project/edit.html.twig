{% extends 'project/base.html.twig' %}

{% block body %}

    <div id="page-project-edit">

        <div class="d-flex flex-row align-items-center mt-5">
            <h2 class="flex-grow-1 text-truncate mb-0">{{ project.name }}</h2>
            <div class="btn-group">
                <a href="{{ path('app_project_show',{uuid:project.uuid}) }}" class="btn btn-outline-secondary">
                    <span class="fa fa-undo"></span>
                    <span class="d-none d-sm-inline">{{ 'action.back'|trans }}</span>
                </a>
            </div>
        </div>

        {{ form_start(formEdit,{attr:{class:'mt-5'}}) }}

        {{ form_row(formEdit.client) }}
        {{ form_row(formEdit.name) }}

        <div class="mt-5">
            <button type="submit" class="btn btn-success">
                <span class="fa fa-save"></span>
                {{ 'action.save'|trans }}
            </button>
            <a href="{{ path('app_project_show',{uuid:project.uuid}) }}" class="btn btn-outline-secondary">
                <span class="fa fa-undo"></span>
                {{ 'action.cancel'|trans }}
            </a>
        </div>

        {{ form_end(formEdit) }}

    </div>

{% endblock %}
