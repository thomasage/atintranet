{% extends 'base.html.twig' %}

{% block body %}

    <div id="page-security-login">

        <form method="post" class="form-login">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="inputUsername">{{ 'field.username'|trans }}</label>
                <input type="text"
                       class="form-control"
                       name="_username"
                       value="{{ last_username }}"
                       id="inputUsername"
                       required
                       autofocus/>
            </div>
            <div class="form-group">
                <label for="inputPassword">{{ 'field.password'|trans }}</label>
                <input type="password"
                       name="_password"
                       id="inputPassword"
                       class="form-control"
                       required/>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me" checked>
                    {{ 'field.remember_me'|trans }}
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-5">
                <span class="fa fa-sign-in"></span>
                {{ 'action.login'|trans }}
            </button>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        </form>

    </div>

{% endblock %}
