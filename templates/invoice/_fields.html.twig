{%- block _invoice_details_widget -%}
    {% if prototype is defined %}
        {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
    {% endif %}
    {% set attr=attr|merge({'data-index':form.children|length}) %}
    <div {{ block('widget_attributes') }}>
        {%- for child in form -%}
            {{ form_row(child) }}
        {%- endfor -%}
    </div>
{%- endblock -%}

