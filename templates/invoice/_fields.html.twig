{%- block _invoice_details_entry_row -%}
    {% filter spaceless %}
        <div class="row mt-4" id="{{ id }}">
            <div class="col-12 col-md-6">{{ form_widget(form.designation) }}</div>
            <div class="col-12 col-md-6">
                <div class="row">
                    {{ form_row(form.quantity) }}
                    {{ form_row(form.amountUnit) }}
                    {{ form_row(form.amountTotal) }}
                    <div class="col-12 mt-2 text-right">
                        <div class="dropdown">
                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                    data-toggle="dropdown">
                                <span class="fa fa-cog"></span>
                                {{ 'actions'|trans }}
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <button type="button" class="dropdown-item js-detail-copy">
                                    <span class="fa fa-fw fa-copy"></span>
                                    {{ 'action.copy'|trans }}
                                </button>
                                <button type="button" class="dropdown-item text-danger js-detail-delete">
                                    <span class="fa fa-fw fa-trash"></span>
                                    {{ 'action.delete'|trans }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfilter %}
{% endblock %}
